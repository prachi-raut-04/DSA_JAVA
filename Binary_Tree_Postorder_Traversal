Code 

class Solution {
    public void postorder(List<Integer> res, TreeNode root) {
        if(root == null) {
            return;
        }    

        postorder(res, root.left);
        postorder(res, root.right);
        res.add(root.val);
    }

    public List<Integer> postorderTraversal(TreeNode root) {
        List<Integer> res = new ArrayList<>();
        postorder(res, root);
        return res;
    }
}

