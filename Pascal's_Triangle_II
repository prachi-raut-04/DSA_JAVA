Code 

class Solution {
    public List<Integer> getRow(int r) {
        List<Integer> res = new ArrayList<>();
        long ans = 1;

        res.add(1);

        for(int j=1; j<=r; j++) {
            ans = ans * (r-j+1);
            ans = ans / j;
            res.add((int) ans);
        }

        return res;
    }
}

